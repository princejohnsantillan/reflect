{
    "name": "princejohnsantillan/reflect",
    "description": "Clearer API for PHP Attributes and Reflection.",
    "license": "MIT",
    "authors": [
        {
            "name": "Prince John Santillan",
            "email": "mail@princejohnsantillan.net"
        }
    ],
    "keywords": [
        "reflect",
        "reflection",
        "enum",
        "attribute"
    ],
    "autoload": {
        "psr-4": {
            "PrinceJohn\\Reflect\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reflect\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "laravel/pint": "^1.17",
        "pestphp/pest": "^3.1",
        "rector/rector": "^1.2",
        "spatie/ray": "^1.41"
    },
    "scripts": {
        "rectify": [
            "./vendor/bin/rector"
        ],
        "lint": [
            "./vendor/bin/pint"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse"
        ],
        "test-coverage": [
            "./vendor/bin/pest --coverage --parallel"
        ],
        "test-mutation": [
            "./vendor/bin/pest --mutate --parallel"
        ],
        "review": [
            "@rectify",
            "@lint",
            "@analyse",
            "@test-coverage",
            "@test-mutation"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
